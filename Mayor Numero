#include "stdafx.h"
#include <iostream>
#include "conio.h"


using namespace std;

//Prototipo de la funcion
int encontrarMax(int x, int y);



int main()
{
	int n1, n2;

	cout << " Digite 2 numeritos please:";
	cin >> n1>>n2;


	cout<<" El numer mayorcito de los numeros es" <<encontrarMax(n1,n2)<<endl;

	getch();
	return 0;
}

//Definicion de la funcion
int encontrarMax(int x, int y)
{
	int numMax;

	if (x>y) {
		
		numMax=x;
	}
	else
		{
			numMax=y;
	}
				return numMax;

}
